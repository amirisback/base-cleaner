<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDarkBlackBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_button"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/tempimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_cooler_blue" />

            <TextView
                android:id="@+id/batterytemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23.2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_big_super_24dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/showmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big_16dp"
            android:layout_marginBottom="@dimen/dimen_big_16dp"
            android:text="NORMAL"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/showsec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_medium_8dp"
            android:text="CPU Temperature is GOOD"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorTextGreen" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_button"
        style="@style/layout_button">

        <Button
            android:id="@+id/coolbutton"
            style="@style/ButtonDoCleaner"
            android:text="@string/button_cool_down" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:scrollbars="horizontal" />

        <TextView
            android:id="@+id/nooverheating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Currently No App Causing Overheating"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorTextWhite" />

    </RelativeLayout>

</RelativeLayout>