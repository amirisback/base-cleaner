<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDarkBlackBlue"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tempimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_cooler_blue" />

        <TextView
            android:id="@+id/batterytemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="23.2"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/showmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big_16dp"
            android:layout_marginBottom="@dimen/dimen_big_16dp"
            android:text="NORMAL"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/coolbutton"
            style="@style/ButtonDoCleaner"
            android:text="@string/button_cool_down" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/showsec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_medium_8dp"
            android:text="CPU Temperature is GOOD"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorTextGreen" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/showsec"
            android:foregroundGravity="center"
            android:scrollbars="horizontal" />

        <TextView
            android:id="@+id/nooverheating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Currently No App Causing Overheating"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorTextWhite" />

    </RelativeLayout>

</LinearLayout>